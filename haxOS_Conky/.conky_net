${alignr}${voffset -14}${if_match "${addr docker0}" != "No Address"}${alignr}${offset -10}${color2}[${color} ${addr docker0} ${color2}]${color}${else}${alignr}${offset -20}$font ${color2}[ ${color}${addr docker0}${color2} ]${color}${endif}
